#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>

/ {
    behaviors {
        double_command: double_command {
            compatible = "zmk,behavior-tap-dance";
            label = "DOUBLE_COMMAND";
            #binding-cells = <0>;
            tapping-term-ms = <100>;
            bindings = <&kp LEFT_COMMAND>, <&tog 1>;
        };
    };

    keymap {
        compatible = "zmk,keymap";

        main {
            // -----------------------------------------------------------------------------------------
            // |  TAB |  Q  |  W  |  E  |  R  |  T  |   |  Y  |  U   |  I  |  O  |  P  | BSPC |
            // | CTRL |  A  |  S  |  D  |  F  |  G  |   |  H  |  J   |  K  |  L  |  ;  |  '   |
            // | SHFT |  Z  |  X  |  C  |  V  |  B  |   |  N  |  M   |  ,  |  .  |  /  | ESC  |
            //                    | GUI | LWR | SPC |   | ENT | RSE  | ALT |

            bindings = <
&lt 1 TAB                    &kp Q  &kp W  &kp E             &kp R            &kp T          &kp Y    &kp U          &kp I         &kp O    &kp P     &kp BACKSLASH
&mt LA(LEFT_SHIFT) CAPSLOCK  &kp A  &kp S  &kp D             &kp F            &kp G          &kp H    &kp J          &kp K         &kp L    &kp SEMI  &kp SQT
&kp LEFT_SHIFT               &kp Z  &kp X  &kp C             &kp V            &kp B          &kp N    &kp M          &kp COMMA     &kp DOT  &kp FSLH  &lt 3 LG(SPACE)
                                           &kp LEFT_CONTROL  &double_command  &lt 2 SPACE    &kp RET  &kp BACKSPACE  &kp LEFT_ALT
            >;
        };

        number {
            bindings = <
&trans  &kp NUMBER_1  &kp NUMBER_2  &kp NUMBER_3  &kp NUMBER_4  &kp N5    &kp NUMBER_6  &kp N7  &kp N8  &kp N9  &kp N0  &trans
&trans  &trans        &trans        &trans        &trans        &trans    &trans        &trans  &trans  &trans  &trans  &trans
&trans  &trans        &trans        &trans        &trans        &trans    &trans        &trans  &trans  &trans  &trans  &trans
                                    &trans        &to 0         &trans    &trans        &trans  &trans
            >;
        };

        special_syntax {
            bindings = <
&trans  &kp EXCLAMATION  &kp AT_SIGN    &kp HASH      &kp DOLLAR  &kp PERCENT    &kp LEFT_BRACKET  &kp RIGHT_BRACKET  &kp LEFT_PARENTHESIS  &kp RIGHT_PARENTHESIS  &trans  &trans
&trans  &kp CARET        &kp AMPERSAND  &kp ASTERISK  &trans      &trans         &kp LEFT_BRACE    &kp RIGHT_BRACE    &kp PLUS              &kp MINUS              &trans  &trans
&trans  &trans           &trans         &trans        &trans      &trans         &kp TILDE         &kp EQUAL          &kp UNDERSCORE        &trans                 &trans  &trans
                                        &trans        &trans      &trans         &trans            &trans             &trans
            >;
        };

        utils {
            bindings = <
&trans  &kp F1  &kp F2  &kp F3  &kp F4  &kp F5    &kp F6             &kp F7                &kp F8                &kp F9           &kp F10  &trans
&trans  &trans  &trans  &trans  &trans  &trans    &kp C_VOLUME_DOWN  &kp C_BRIGHTNESS_DEC  &kp C_BRIGHTNESS_INC  &kp C_VOLUME_UP  &trans   &trans
&trans  &trans  &trans  &trans  &trans  &trans    &trans             &trans                &trans                &trans           &trans   &trans
                        &trans  &trans  &trans    &trans             &trans                &trans
            >;
        };
    };
};
